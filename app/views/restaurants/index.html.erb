

<div class="container">
  <h1> List of restaurants  </h1>
  <% @restaurants.each do |restaurant| %>
    <ul>
      <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      </li>
    </ul>
  <% end %>
  <br>
  <br>
  <button class="btn btn-danger bouton">
  <%= link_to "Add a new restaurant", new_restaurant_path %>
  </button>
</div>
